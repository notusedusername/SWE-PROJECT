<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="game.MainMenuController"
            id="mainmenu"
            fx:id="mainmenu">
    <left>
        <Label text="Color War"
               fx:id="title"
               id="title"
               BorderPane.alignment="CENTER_RIGHT"/>
    </left>
    <center>
        <VBox
                fillWidth="true"
                alignment="CENTER">
            <Button fx:id="startbutton" text="New Game" onAction="#startGame"/>
            <Button fx:id="winnersbutton" text="Winners" onAction="#showWinners"/>
            <Button fx:id="exitbutton" text="Exit" onAction="#exit"/>
        </VBox>
    </center>


</BorderPane>
